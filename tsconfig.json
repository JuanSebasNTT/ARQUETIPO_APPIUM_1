{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "target": "ES6",
        "lib": [
            "es2022",
            "dom"
        ],
        "types": [
            "node",
            "@wdio/globals/types",
            "expect-webdriverio",
            "@wdio/mocha-framework",
            "@wdio/appium-service",
            "@wdio/browserstack-service",
            "@wdio/visual-service"
        ],
        "skipLibCheck": true,
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["*"]
        },
        "esModuleInterop": true,  
        "allowSyntheticDefaultImports": true  
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "config/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}